
IF !DEF(DMEM_INC) ;include guard
    DEF DMEM_INC EQU 1

DEF WRAM_SIZE               EQU $1000
DEF NUM_BANK                EQU $7

DEF DMEM_CHUNKS_PER_BANK    EQU $4
DEF DMEM_CHUNK_SIZE         EQU WRAM_SIZE / DMEM_CHUNKS_PER_BANK

DEF DMEM_OBJECT_HEADER_SIZE EQU $10
DEF DMEM_HEADER_SIZE        EQU $10 * (DMEM_OBJECT_HEADER_SIZE + $1)

